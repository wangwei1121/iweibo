<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/theme_background"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <!-- title -->
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_white"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <!-- title -->
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/tool_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="?attr/actionBarSize"
                app:contentScrim="@color/main_white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <!-- status header-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:background="?attr/theme_background"
                    android:paddingEnd="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingStart="8dp">
                    <!--user avatar-->
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/user_avatar"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        app:backgroundImage="@color/main_light_gray"
                        app:placeholderImage="@drawable/default_user_avatar"
                        app:roundAsCircle="true"
                        app:roundBottomLeft="false"
                        app:roundBottomRight="true"
                        app:roundTopLeft="true"
                        app:roundTopRight="false"
                        tools:ignore="ContentDescription"/>
                    <!-- user name -->
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_toEndOf="@id/user_avatar"
                        android:layout_toRightOf="@id/user_avatar"
                        android:textColor="?attr/theme_text_view"
                        android:textSize="14sp"
                        tools:text="alexwan"/>
                    <!--send time-->
                    <TextView
                        android:id="@+id/created_at"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_name"
                        android:layout_toEndOf="@id/user_avatar"
                        android:layout_toRightOf="@id/user_avatar"
                        android:textColor="#f4511e"
                        android:textSize="14sp"
                        tools:text="22分钟之前"/>
                    <!--from-->
                    <TextView
                        android:id="@+id/from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_name"
                        android:layout_toEndOf="@id/user_avatar"
                        android:layout_toRightOf="@id/created_at"
                        android:textColor="@color/main_gray"
                        android:textSize="14sp"
                        tools:text="@string/string_statuses_from"/>

                    <!-- text content -->
                    <TextView
                        android:id="@+id/content_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_avatar"
                        android:textColor="?attr/theme_text_view"
                        android:textSize="15sp"
                        tools:text="微博内容"/>
                    <!-- pic url -->
                    <android.support.v7.widget.GridLayout
                        android:id="@+id/status_pic_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/content_text"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        app:alignmentMode="alignBounds"
                        app:columnCount="3"
                        app:rowCount="3"
                        app:useDefaultMargins="true"/>
                    <!-- retweeted status-->
                    <LinearLayout
                        android:id="@+id/retweeted_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/status_pic_grid"
                        android:background="#440f8ae6"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/name_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/tool_bar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:layout_collapseMode="pin"
                    tools:ignore="PrivateResource"/>

            </android.support.design.widget.CollapsingToolbarLayout>
            <View
                android:layout_below="@id/retweeted_layout"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="?attr/theme_divider"/>
            <android.support.design.widget.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                app:tabGravity="fill"
                android:background="?attr/theme_background"
                app:tabSelectedTextColor="@color/main_black"
                app:tabTextColor="@color/main_gray"
                tools:ignore="PrivateResource"/>
        </android.support.design.widget.AppBarLayout>
        <!-- comment info -->
        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">

                    <ListView
                        android:id="@+id/list_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:cacheColorHint="@color/main_transparent"
                        android:divider="@null"
                        android:listSelector="@color/main_transparent"
                        android:scrollbars="none"/>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </FrameLayout>


    </android.support.design.widget.CoordinatorLayout>
</android.support.v4.widget.DrawerLayout>