<resources>

    <!-- base light theme. -->
    <style name="AppTheme.Base.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- base dark theme-->
    <style name="AppTheme.Base.Dark" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme" parent="AppTheme.Base.Light">
        <item name="colorPrimary">@color/main_dark_blue</item>
        <item name="colorPrimaryDark">@color/main_blue</item>
        <item name="colorAccent">@color/main_orange</item>
        <item name="android:textColorPrimary">@color/main_white</item>
        <item name="android:textColorSecondary">@color/main_gray</item>
        <item name="android:textColorPrimaryInverse">@color/main_half_black</item>
        <item name="android:textColorSecondaryInverse">@color/main_gray</item>
        <item name="navigation_back">@color/main_blue</item>
        <item name="content_text">@color/main_black</item>
    </style>
    <style name="AppTheme.Dark" parent="AppTheme.Base.Dark">
        <item name="colorPrimary">@color/theme_primary_inverse</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark_inverse</item>
        <item name="colorAccent">@color/main_orange</item>
        <!-- 标题栏字体颜色 -->
        <item name="android:textColorPrimary">@color/main_white</item>
        <item name="android:textColorSecondary">@color/main_gray</item>
        <item name="android:textColorPrimaryInverse">@color/main_half_black</item>
        <item name="android:textColorSecondaryInverse">@color/main_gray</item>
        <item name="navigation_back">@color/theme_primary_inverse</item>
        <item name="content_text">@color/main_light_gray</item>
    </style>
</resources>
