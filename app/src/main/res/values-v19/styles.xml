<resources>

    <!-- base light theme. -->
    <style name="AppTheme.Base.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- base dark theme-->
    <style name="AppTheme.Base.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- day theme -->
    <style name="AppTheme" parent="AppTheme.Base.Light">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/main_orange</item>
        <item name="android:textColorPrimary">@color/main_white</item>
        <item name="android:textColorSecondary">@color/main_gray</item>
        <item name="android:textColorPrimaryInverse">@color/main_half_black</item>
        <item name="android:textColorSecondaryInverse">@color/main_gray</item>
        <item name="navigation_back">@color/main_blue</item>
        <item name="theme_text_view">@color/main_black</item>
        <item name="theme_tab_layout">@color/main_blue</item>
        <item name="theme_background">@color/main_light_gray</item>
        <item name="theme_divider">@color/main_light_gray</item>
        <item name="theme_menu">@drawable/item_menu_selector</item>
        <item name="theme_item_tab">@color/main_white</item>
        <item name="theme_card_view">@color/main_white</item>
    </style>

    <!--night theme -->
    <style name="AppTheme.Dark" parent="AppTheme.Base.Dark">
        <item name="colorPrimary">@color/color_primary_dark_inverse</item>
        <item name="colorPrimaryDark">@color/color_primary_dark_inverse</item>
        <item name="colorAccent">@color/main_orange</item>
        <item name="android:textColorPrimary">@color/main_white</item>
        <item name="android:textColorSecondary">@color/main_gray</item>
        <item name="android:textColorPrimaryInverse">@color/main_half_black</item>
        <item name="android:textColorSecondaryInverse">@color/main_gray</item>
        <item name="navigation_back">@color/color_primary_inverse</item>
        <item name="theme_text_view">@color/main_gray</item>
        <item name="theme_tab_layout">@color/color_primary_inverse</item>
        <item name="theme_background">@color/color_primary_inverse</item>
        <item name="theme_divider">@color/main_dark_gray</item>
        <item name="theme_menu">@drawable/item_menu_selector</item>
        <item name="theme_item_tab">@color/color_primary_dark_inverse</item>
        <item name="theme_card_view">@color/color_primary_dark_inverse</item>
    </style>
</resources>

